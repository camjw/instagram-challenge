<!DOCTYPE html>
<html>
  <head>
    <title>It's a Gram!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-custom">
      <a class="navbar-brand" href="/">It's a Gram!</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% if current_user %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/grams/new">New Gram</a>
              </li>
          </ul>
          <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/my_grams">My Grams</a>
              </li>
          </ul>
        </div>
        <form class="form-inline">
          <a class="btn btn-outline-primary" href="/users/sign_out" data-method="delete">Logout</a>
          <div style="padding-left: 10px;">
            <a class="btn btn-outline-success" href="/users/edit">Edit Profile</a>
          </div>
        </form>
      <% else %>
      <div class="collapse navbar-collapse">
        <form class="form-inline">
          <ul class="navbar-nav">
          </ul>
        </form>
      </div>
          <a class="btn btn-outline-primary" href="/users/sign_in" role="button">Login</a>
          <div style="padding-left: 10px;">
            <a class="btn btn-outline-success" href="/users/sign_up" role="button">Sign Up</a>
          </div>
        </form>
      <% end %>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
